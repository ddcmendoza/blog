<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>

<%= form_with url: update_article_path(@article), method: "patch" do |f|%>

<p>
    <%= f.label :title %> <br />
    <%= f.text_field :title, :value => @article.title %>
</p>
<p>
    <%= f.label :content %> <br />
    <%= f.text_area :content, :value => @article.content, :size=>"50" %>
</p>
<p>
    <%= f.submit %>
</p>
<%= link_to 'Back', articles_path %>
<% end %>